            "materials": {
              "type": "number",
              "title": "Вывезено снега на полигон, тонн"
            },
            "approved": {
              "type": "string",
              "title": "Соответствует маршрутному листу"
            }
          },
          "title": ""
        },
        "compareJobsList": {
          "type": "array",
          "items": {
