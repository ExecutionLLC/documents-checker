        "routingSheetNumber",
        "carNumber",
        "date"
      ],
      "properties": {
        "routingSheetNumber": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10,
          "pattern": "\\d+",
          "title": "Маршрутный лист №"
        },
        "carNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 999,
          "title": "Номер машины"
        },
        "date": {
          "type": "string",
          "title": "Дата"
        }
      },
      "title": ""
