            "approvedDayHours",
            "diffDayHours",
            "approvedNightHours",
            "diffNightHours",
            "materials",
            "approved"
          ],
          "properties": {
            "jobType": {
              "type": "string",
              "title": "Вид работ"
            },
            "approvedDayHours": {
              "$ref": "#/definitions/timedelta",
              "title": "Подтверждено трудозатрат днем, часов"
            },
            "diffDayHours": {
              "$ref": "#/definitions/timedelta",
              "title": "Отклонение от плана день, часов"
            },
            "approvedNightHours": {
              "$ref": "#/definitions/timedelta",
              "title": "Подтверждено трудозатрат ночью, часов"
            },
            "diffNightHours": {
              "$ref": "#/definitions/timedelta",
