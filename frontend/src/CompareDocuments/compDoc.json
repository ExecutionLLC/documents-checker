              "$ref": "#/definitions/timedelta",
              "title": "Трудозатрат по маршрутному листу, часов"
            },
            "hoursApproved": {
              "$ref": "#/definitions/timedelta",
              "title": "Трудозатрат подтверждено, часов"
            },
            "approved": {
              "type": "string",
              "title": "Соответствует маршрутному листу"
            },
            "materials": {
              "type": "number",
              "title": "Вес снега при взвешивании на полигоне"
            }
          }
        }
      },

      "type": "object",
