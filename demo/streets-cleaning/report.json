{
    "idPart": {
        "jsonSchema": {
            "type": "object",
            "required": [
                "routingSheetNumber",
                "carNumber",
                "date"
            ],
            "properties": {
                "routingSheetNumber": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 10,
                    "pattern": "\\d+",
                    "title": "Маршрутный лист №"
                },                
                "carNumber": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 999,
                    "title": "Номер машины"
                },
                "date": {
                    "type": "string",
                    "title": "Дата"
                }
            },
            "title": ""
        },
        "uiSchema": {
            "routingSheetNumber": {
                "classNames": "col-xs-12"
            },
            "carNumber": {
                "classNames": "col-xs-12"
            },
            "date": {
                "classNames": "col-xs-12",
                "ui:widget": "alt-date",
                "ui:options": {
                    "yearsRange": [
                        1980,
                        2030
                    ]
                }
            }
        }
    },
    "dataPart": {
        "jsonSchema": {
            "definitions": {
                "timedelta": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 24,
                    "default": 0
                },
                "time": {
                    "type": "string",
                    "pattern": "^([0-9]|0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$"
                },
                
                "jobsListItem": {
                    "type": "object",
                    "required": [
                        "geozone",
                        "startTime",
                        "endTime",
                        "totalTime"
                    ],
                    "properties": {
                        "geozone": {
                            "type": "string",
                            "title": "Геозона"
                        },
                        "startTime": {
                            "$ref": "#/definitions/time",
                            "title": "Время начала работы"
                        },
                        "endTime": {
                            "$ref": "#/definitions/time",
                            "title": "Время приезда на полигон"
                        },
                        "totalTime": {
                            "$ref": "#/definitions/timedelta",
                            "title": "Общее время работы, часов"
                        },
                        "result": {
                            "type": "number",
                            "minimum": 0.0,
                            "title": "Вес снега при взвешивании на полигоне, тонн"
                        }
                    }
                }
            },
            
            "type": "object",
            "properties": {
                "jobsListHeader": {
                    "type": "object",
                    "required": [
                        "district"
                    ],
                    "properties": {
                        "district": {
                            "type": "string",
                            "title": "Район"
                        }
                    },
                    "title": ""
                },
                "jobsList": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/jobsListItem"
                    },
                    "title": "Позиции"
                }
            }
        },
        "uiSchema": {
            "jobsList": {
                "items": {
                    "classNames": "col-xs-12",
                    "geozone": { "classNames": "col-xs-12" },
                    "startTime": { "classNames": "col-xs-4" },
                    "endTime": { "classNames": "col-xs-4" },
                    "totalTime": { "classNames": "col-xs-4" },
                    "result": { "classNames": "col-xs-12" }
                },
                "ui:options": {
                    "orderable": false
                }
            }
        }
    },
    "dynamicPart": {
        "jsonSchema": {
        },
        "uiSchema": {
        }
    }
}

